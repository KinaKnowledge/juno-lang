      (declare (function new_buffer image_viewer floating_div)
               (global new_buffer image_viewer floating_div))
      (when (> files.length 0)
         (= result
            (new Promise
               (fn (resolve reject)
                  (progn
                     (declare (function resolve reject))
                     (= resolver resolve)
