      (attach_event_listener filter_button
         `click
         (fn (e)
            (set_filter_mode (not (has_class? "juno-button-on" filter_button)))))
      (if options.controls
         {
             view:view
             search: search_handler
             reset: reset_search
             options: options
             set_filter_mode: set_filter_mode
         }
         view))
