                                (aif (prop my_controls id.options.id)
                                     (progn
                                      (remove_prop my_controls id.options.id)
                                      (render_view)))
                                (aif (prop my_controls id)
                                     (progn
                                      (remove_prop my_controls id)
                                      (render_view))
